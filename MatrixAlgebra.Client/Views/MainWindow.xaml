<Window x:Class="MatrixAlgebra.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatrixAlgebra.Client.Views"
        xmlns:dataGrid2D="http://gu.se/DataGrid2D"
        mc:Ignorable="d"
        Title="Matrix Algebra" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Row="1" 
                Grid.Column="1" 
                Height="30"
                Margin="10 0">
            Calculate
        </Button>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">
            Select operation:
            </TextBlock>
            <ComboBox Text="Select operation:"
                      Margin="10 10 10 0"
                      Height="30" 
                      Width="auto"
                      ItemsSource="{Binding Ops}">
            </ComboBox>
        </StackPanel>

        <Border Style="{StaticResource container}">
            <Grid>
                <TextBlock Margin="-5 -20 0 0"
                           Background="White"
                           Width="Auto"
                           HorizontalAlignment="Left"
                           Padding="3 0">
                    A
                </TextBlock>
                <DataGrid>

                </DataGrid>
            </Grid>
        </Border>

        <Border Style="{StaticResource container}"
                Grid.Column="2">
            <Grid>
                <TextBlock Margin="-5 -20 0 0"
                           Background="White"
                           Width="Auto"
                           HorizontalAlignment="Left"
                           Padding="3 0">
                    B
                </TextBlock>
                <DataGrid dataGrid2D:ItemsSource.RowsSource="{Binding Values}">

                </DataGrid>
            </Grid>
        </Border>

        <Border Style="{StaticResource container}"
                Grid.Column="1"
                Grid.Row="2">
            <Grid>
                <TextBlock Margin="-5 -20 0 0"
                           Background="White"
                           Width="Auto"
                           HorizontalAlignment="Left"
                           Padding="3 0">
                    Result
                </TextBlock>
                <DataGrid HeadersVisibility="None"
                          dataGrid2D:ItemsSource.RowsSource="{Binding Values}">
                    
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
